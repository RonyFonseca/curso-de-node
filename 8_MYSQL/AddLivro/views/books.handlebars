<h1>Meus livros</h1>
<div id="card-book-container">
    <a href="/">Adicionar Livro</a>
    {{#each books}}
        <div class="card-book">
            <div class="card-book-content">
                <h3 class="title-card-book"><a href="/book/{{this.id}}">Titulo: {{this.title}}</a></h3>
                <h4 class="id-card-book">ID: {{this.id}}</h4>
                <p class="pager-card-book">PAGES: {{this.page}}</p>
            </div>
            <div class="card-book-buttons">
                <a href="/book/edit/{{this.id}}">Editar</a>
                <form action="/book/remove/{{this.id}}" method="POST">
                    <input type="submit" value="remover">
                </form>
            </div>
        </div>
    {{/each}}
</div>